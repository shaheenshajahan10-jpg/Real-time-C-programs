#include <stdio.h>
#include <string.h>

int main()
{
    char day[20];

    // Input day
    printf("Enter the day: ");
    scanf("%s", day);

    // Convert input to lowercase for easy comparison
    for(int i=0; day[i]; i++) {
        if(day[i] >= 'A' && day[i] <= 'Z')
            day[i] = day[i] + 32;
    }

    // Check if it's weekend or working day
    if (strcmp(day, "saturday") == 0 || strcmp(day, "sunday") == 0)
        printf("%s is a WEEKEND.\n", day);
    else if (strcmp(day, "monday") == 0 || strcmp(day, "tuesday") == 0 ||
             strcmp(day, "wednesday") == 0 || strcmp(day, "thursday") == 0 ||
             strcmp(day, "friday") == 0)
        printf("%s is a WORKING DAY.\n", day);
    else
        printf("Invalid day entered.\n");

    return 0;
}
