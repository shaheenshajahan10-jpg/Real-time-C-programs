#include <stdio.h>

int main()
{
    int totalMinutes, hours, minutes;

    printf("Enter total minutes: ");
    scanf("%d", &totalMinutes);

    hours = totalMinutes / 60;
    minutes = totalMinutes % 60;

    printf("\n%d minutes = %d hours and %d minutes",
           totalMinutes, hours, minutes);

    return 0;
}
