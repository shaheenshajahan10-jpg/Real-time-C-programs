#include <stdio.h>

// Function to calculate total bill
float calculateBill(float price, int quantity) {
    return price * quantity;
}

int main() {
    float price, total;
    int quantity;

    printf("Enter price of item: ");
    scanf("%f", &price);

    printf("Enter quantity: ");
    scanf("%d", &quantity);

    total = calculateBill(price, quantity);

    printf("Total bill amount: %.2f\n", total);

    return 0;
}
