#include <stdio.h>

// Function to calculate average
float calculateAverage(float numbers[], int n) {
    float sum = 0.0;
    for (int i = 0; i < n; i++) {
        sum += numbers[i];
    }
    return sum / n;
}

int main() {
    int n;
    printf("Enter the number of elements: ");
    scanf("%d", &n);

    float numbers[n];

    // Input numbers
    for (int i = 0; i < n; i++) {
        printf("Enter number %d: ", i + 1);
        scanf("%f", &numbers[i]);
    }

    float avg = calculateAverage(numbers, n);

    printf("Average = %.2f\n", avg);

    return 0;
}
