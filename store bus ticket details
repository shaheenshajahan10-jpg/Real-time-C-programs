#include <stdio.h>

// Define structure
struct BusTicket {
    int ticketNo;
    char passengerName[50];
    char source[30];
    char destination[30];
    float fare;
};

int main() {
    struct BusTicket t;

    // Input ticket details
    printf("Enter Ticket Number: ");
    scanf("%d", &t.ticketNo);

    printf("Enter Passenger Name: ");
    scanf("%s", t.passengerName);

    printf("Enter Source: ");
    scanf("%s", t.source);

    printf("Enter Destination: ");
    scanf("%s", t.destination);

    printf("Enter Ticket Fare: ");
    scanf("%f", &t.fare);

    // Display ticket details
    printf("\n--- Bus Ticket Details ---\n");
    printf("Ticket Number   : %d\n", t.ticketNo);
    printf("Passenger Name  : %s\n", t.passengerName);
    printf("Source          : %s\n", t.source);
    printf("Destination     : %s\n", t.destination);
    printf("Fare            : %.2f\n", t.fare);

    return 0;
}
