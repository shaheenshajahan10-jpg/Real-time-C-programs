#include <stdio.h>

int main()
{
    float bill, discount;

    // Input bill amount
    printf("Enter the bill amount: ");
    scanf("%f", &bill);

    // Check for discount
    if (bill >= 1000) {
        discount = bill * 0.10; // 10% discount
        printf("You get a discount of %.2f\n", discount);
        printf("Total amount to pay: %.2f\n", bill - discount);
    } else {
        printf("No discount.\n");
        printf("Total amount to pay: %.2f\n", bill);
    }

    return 0;
}
