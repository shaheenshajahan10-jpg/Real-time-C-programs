#include <stdio.h>
#include <string.h>

// Define structure
struct Customer {
    int customerId;
    char name[50];
    char mobile[15];
};

int main() {
    struct Customer c[50];
    int n, i, searchId, found = 0;

    // Input number of customers
    printf("Enter number of customers: ");
    scanf("%d", &n);

    // Input customer details
    for(i = 0; i < n; i++) {
        printf("\nEnter details of Customer %d\n", i + 1);

        printf("Customer ID: ");
        scanf("%d", &c[i].customerId);

        printf("Name: ");
        scanf("%s", c[i].name);

        printf("Mobile Number: ");
        scanf("%s", c[i].mobile);
    }

    // Search customer by ID
    printf("\nEnter Customer ID to search: ");
    scanf("%d", &searchId);

    for(i = 0; i < n; i++) {
        if(c[i].customerId == searchId) {
            printf("\n--- Customer Found ---\n");
            printf("Customer ID   : %d\n", c[i].customerId);
            printf("Name          : %s\n", c[i].name);
            printf("Mobile Number : %s\n", c[i].mobile);
            found = 1;
            break;
        }
    }

    if(!found) {
        printf("\nCustomer not found!");
    }

    return 0;
}
