#include <stdio.h>

struct Student {
    int rollNo;
    char name[50];
};

int main() {
    struct Student s[100];
    int n, i;

    // Read number of records
    printf("Enter number of student records: ");
    scanf("%d", &n);

    // Input student details
    for(i = 0; i < n; i++) {
        printf("\nEnter details of Student %d\n", i + 1);

        printf("Roll Number: ");
        scanf("%d", &s[i].rollNo);

        printf("Name: ");
        scanf("%s", s[i].name);
    }

    // Display count of records
    printf("\nTotal number of records stored = %d\n", n);

    return 0;
}
