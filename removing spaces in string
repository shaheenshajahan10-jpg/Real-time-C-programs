#include <stdio.h>
#include <string.h>

int main() {
    char str[100];
    int i, j = 0;

    printf("Enter a string: ");
    fgets(str, sizeof(str), stdin);

    // Remove newline character if present
    if (str[strlen(str) - 1] == '\n')
        str[strlen(str) - 1] = '\0';

    // Remove spaces
    for (i = 0; str[i] != '\0'; i++) {
        if (str[i] != ' ') {       // If the character is not a space
            str[j] = str[i];       // Copy it to the next position
            j++;
        }
    }
    str[j] = '\0';  // Null-terminate the new string

    printf("String without spaces: %s\n", str);

    return 0;
}
