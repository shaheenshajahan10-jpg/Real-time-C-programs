#include <stdio.h>

int main() {
    int n1, n2, i;
    int arr1[50], arr2[50], arr3[100];

    printf("Enter number of elements in first array: ");
    scanf("%d", &n1);

    for (i = 0; i < n1; i++) {
        printf("Enter element %d: ", i + 1);
        scanf("%d", &arr1[i]);
        arr3[i] = arr1[i];
    }

    printf("Enter number of elements in second array: ");
    scanf("%d", &n2);

    for (i = 0; i < n2; i++) {
        printf("Enter element %d: ", i + 1);
        scanf("%d", &arr2[i]);
        arr3[n1 + i] = arr2[i];
    }

    printf("\nMerged Array:\n");
    for (i = 0; i < n1 + n2; i++) {
        printf("%d ", arr3[i]);
    }

    return 0;
}
