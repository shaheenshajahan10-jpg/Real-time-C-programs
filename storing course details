#include <stdio.h>

// Define structure
struct Course {
    int courseId;
    char courseName[50];
    int duration;      // in months
    float fee;
};

int main() {
    struct Course c;

    // Input course details
    printf("Enter Course ID: ");
    scanf("%d", &c.courseId);

    printf("Enter Course Name: ");
    scanf("%s", c.courseName);

    printf("Enter Course Duration (in months): ");
    scanf("%d", &c.duration);

    printf("Enter Course Fee: ");
    scanf("%f", &c.fee);

    // Display course details
    printf("\n--- Course Details ---\n");
    printf("Course ID      : %d\n", c.courseId);
    printf("Course Name    : %s\n", c.courseName);
    printf("Duration       : %d months\n", c.duration);
    printf("Course Fee     : %.2f\n", c.fee);

    return 0;
}
