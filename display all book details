#include <stdio.h>

struct Book {
    int bookId;
    char title[50];
    float price;
};

int main() {
    struct Book b[50];
    int n, i;

    // Read number of books
    printf("Enter number of books: ");
    scanf("%d", &n);

    // Input book details
    for(i = 0; i < n; i++) {
        printf("\nEnter details of Book %d\n", i + 1);

        printf("Book ID: ");
        scanf("%d", &b[i].bookId);

        printf("Book Title: ");
        scanf("%s", b[i].title);

        printf("Book Price: ");
        scanf("%f", &b[i].price);
    }

    // Display book details
    printf("\n--- Book Details ---\n");
    for(i = 0; i < n; i++) {
        printf("\nBook %d\n", i + 1);
        printf("Book ID   : %d\n", b[i].bookId);
        printf("Title     : %s\n", b[i].title);
        printf("Price     : %.2f\n", b[i].price);
    }

    return 0;
}
